{
  "name": "kols-client",
  "description": "A language server example",
  "author": "chenyuan_hu@outlook.com",
  "license": "MIT",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:kotlin"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "languages": [
      {
        "id": "kotlin",
        "aliases": [
          "kotlin",
          "kotlin"
        ],
        "extensions": [
          ".kts",
          ".kt"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "kotlin",
        "scopeName": "source.kotlin",
        "path": "./client/syntaxes/kotlin.tmLanguage.json"
      }
    ]
  },
  "breakpoints": [
    {
      "language": "kotlin"
    }
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "test": "sh ./scripts/e2e.sh"
  },
  "devDependencies": {
    "@types/mocha": "^8.2.2",
    "@types/node": "^12.12.0",
    "@types/vscode": "^1.58.0",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "eslint": "^7.26.0",
    "mocha": "^8.3.2",
    "typescript": "^4.3.2",
    "vscode-test": "^1.2.0"
  },
  "dependencies": {
    "vscode-languageclient": "^7.0.0"
  }
}
